---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Vios Constructora 2023">
	<div>
		<h1 class="text-gradient">Hola Ing. Esme</h1>
	</div>
</Layout>

<style>
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
